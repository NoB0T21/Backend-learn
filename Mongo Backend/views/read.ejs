<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device.width">
        <link rel="stylesheet" href="../stylesheets/index.css">
        <title>Profil</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="main w-full min-h-screen bg-zinc-900">
            <div class="text-white">
                <a class="text-blue-500 inline-block pt-10 px-10" href="/">Go to Home</a>
            </div>
            <div class="form p-10 text-white">
                <h1 class="text-3xl">All Users</h1>
            <div class="users flex gap-3 flex-wrap">
                <% if(users.length > 0){ %>
                    <% users.forEach(function(user){ %>
                        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                            <div class="h-52 w-full bg-zinc-700 rounded-lg overflow-hidden">
                                <img class="w-full h-full object-cover object-center" src="<%= user.image %>"> 
                            </div>
                            <h3 class="text-xl mt-3 tracking-tighter"><%= user.username %></h3>
                            <h5 class="text-zinc-500"><%= user.email %></h5>
                            <div class="flex gap-3 mt-10">
                                <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
                                <a class="text-red-200" href="/delete/<%= user._id %>">Delete User</a>
                            </div>
                        </div>
                    <% }) %>
                <% } else{ %>
                    <h2 class="text-zinc-600">no User yet</h2>
                <% } %>
            </div>
            </div>
        </div>
        <script src="../index.js"></script>
    </body>
</html>